{
  "name": "typescript-fullstack-template",
  "version": "0.0.1",
  "description": "A fullstack template build with TypeScript",
  "main": "expo-router/entry",
  "author": {
    "name": "Victor M. Gomes",
    "email": "info@victormgomes.net",
    "url": "https://victormgomes.net"
  },
  "private": true,
  "license": "MIT",
  "config": {
    "db": {
      "schema": "src/backend/common/database/db.schema.prisma"
    }
  },
  "scripts": {
    "Copy:Schema": "cp src/common/database/db.schema.prisma dist/src/common/database",
    "Backend:Start:Dev": "npm run Backend:Lint && npm run Backend:Format && npx nest start --watch",
    "Backend:Start:Prod": "node dist/main",
    "Backend:Build": "npm run Backend:Lint && npm run Backend:Format && npm run nest build",
    "Backend:Start": "nest start",
    "Backend:Debug": "nest start --debug --watch",
    "Backend:DB:Generate": "prisma generate --schema=$npm_package_config_db_schema",
    "Backend:DB:Migrate": "prisma migrate dev --schema=$npm_package_config_db_schema",
    "Backend:DB:Migrate:Deploy": "prisma migrate deploy --schema=$npm_package_config_db_schema",
    "Backend:DB:Reset": "prisma migrate reset --force --skip-seed --schema=$npm_package_config_db_schema",
    "Backend:DB:studio": "prisma studio --schema=$npm_package_config_db_schema",
    "Backend:DB:Push": "prisma db push --schema=$npm_package_config_db_schema",
    "Backend:Test": "jest",
    "Backend:Test:Watch": "jest --watch",
    "Backend:Test:Cov": "jest --coverage",
    "Backend:Test:Debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "BackEnd:Test:e2e": "jest --config ./test/jest-e2e.json",
    "Backend:Lint": "eslint --config backend.eslint.config.mjs \"{src,apps,libs,test}/**/*.ts\" --fix",
    "Backend:Format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "Frontend:Start:Dev": "npm run Frontend:Lint && vite --host",
    "Frontend:Build": "npm run Frontend:Lint && npm run tsc --project frontend.tsconfig.json && vite build",
    "Frontend:Start:Preview": "vite preview",
    "Frontend:Lint": "eslint --config frontend.eslint.config.mjs --ext .ts,.tsx src/resources",
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "expo lint"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@nestjs/common": "^11.1.0",
    "@nestjs/core": "^11.1.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^11.1.0",
    "@nestjs/swagger": "^11.1.6",
    "@prisma/client": "^6.7.0",
    "@react-navigation/bottom-tabs": "^7.3.11",
    "@react-navigation/elements": "^2.4.0",
    "@react-navigation/native": "^7.1.7",
    "expo": "~53.0.7",
    "expo-blur": "~14.1.4",
    "expo-constants": "~17.1.5",
    "expo-font": "~13.3.1",
    "expo-haptics": "~14.1.4",
    "expo-image": "~2.1.6",
    "expo-linking": "~7.1.4",
    "expo-router": "~5.0.5",
    "expo-splash-screen": "~0.30.8",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.4",
    "expo-system-ui": "~5.0.7",
    "expo-web-browser": "~14.1.6",
    "nestjs-zod": "^4.3.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.79.2",
    "react-native-gesture-handler": "~2.25.0",
    "react-native-reanimated": "~3.17.5",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.10.0",
    "react-native-web": "~0.20.0",
    "react-native-webview": "13.13.5",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.0",
    "@swc/cli": "^0.7.3",
    "@swc/core": "^1.11.24",
    "@types/express": "^5.0.1",
    "@types/i18next": "^13.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "@types/react": "~19.1.2",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.26.0",
    "eslint-config-expo": "~9.2.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "prisma": "^6.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "preset": "jest-expo"
  }
}